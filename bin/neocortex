#!/usr/bin/python

import Pyro4
import syslog
import signal
import os
import imp
from multiprocessing import Process, Value
import MySQLdb as mysql
import sys
import requests
import json
import time

from NeoCortexLib import NeoCortexLib
from NeoCortex import NeoCortex
from TaskHelper import TaskHelper

#CONFIG_FILE = '/data/cortex/cortex.conf'
Pyro4.config.SERVERTYPE = "multiplex"
Pyro4.config.SOCK_REUSE = True

if __name__ == "__main__":
	pyro              = Pyro4.Daemon(host='localhost',port=1888)
	neocortex         = NeoCortex(pyro)
	pyro._pyroHmacKey = neocortex.config['NEOCORTEX_KEY']
	uri               = pyro.register(neocortex,'neocortex')
	syslog.syslog('neocortex started')
	pyro.requestLoop()
